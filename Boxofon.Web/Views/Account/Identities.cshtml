@{
    Layout = "Shared/_Authenticated.cshtml";
}

<h1>Inloggningssätt</h1>

<ul>
    <li>
        Google:
        @if (Model.GoogleIdLinked)
        {
            if (Model.AllowUnlinkIds)
            {
                <form action="/account/identities/google" method="post">
                    <input type="hidden" name="operation" value="delete"/>
                    <button type="submit">Ta bort</button>
                </form>
            }
            else
            {
                <text>Anslutet</text>
            }
        }
        else
        {
            <a href="/authentication/redirect/google?returnUrl=/account/identities">Anslut</a>
        }
